                    android:text="금"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="토"
                    android:textColor="#0054FF"/>

            </TableRow>
            <TableRow
                android:id="@+id/tr_1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="1"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="2"/>
                <TextView
                    android:layout_width="0dp"
