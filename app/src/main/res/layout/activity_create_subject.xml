<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    tools:context=".CreateSubject"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="0dp"
            android:theme="@style/AppTheme.AppBarOverlay">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                app:subtitleTextAppearance="@style/AppTheme.SubTitleText"
                app:titleTextAppearance="@style/AppTheme.TitleText"/>


        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingEnd="14dp">

                    <ImageView
                        style="@style/createEventIconStyle"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/icon_title" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"
                        android:orientation="horizontal"
                        android:paddingStart="4dp"
                        android:paddingTop="6dp"
                        android:paddingEnd="4dp"
                        android:paddingBottom="5.5dp">

                        <EditText
                            android:id="@+id/et_subject_title"
                            style="@style/createEventItemTextView"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:hint="제목"
                            android:paddingStart="6dp"
                            android:paddingEnd="6dp"
                            android:textColor="#252525" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingEnd="14dp">

                    <ImageView
                        style="@style/createEventIconStyle"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/icon_title" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"
                        android:orientation="horizontal"
                        android:paddingStart="4dp"
                        android:paddingTop="6dp"
                        android:paddingEnd="4dp"
                        android:paddingBottom="5.5dp">

                        <EditText
                            android:id="@+id/et_subject_memo"
                            style="@style/createEventItemTextView"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:hint="memo"
                            android:paddingStart="6dp"
                            android:paddingEnd="6dp"
                            android:textColor="#252525" />


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingEnd="14dp">

                    <ImageView
                        style="@style/createEventIconStyle"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/icon_clock" />

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="10" />

                    <TextView
                        android:id="@+id/sub_start_date"
                        style="@style/createEventItemTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="0dp"

                        android:gravity="end"
                        android:paddingStart="8dp"
                        android:paddingTop="6.5dp"
                        android:paddingEnd="8dp"
                        android:paddingBottom="6.5dp"
                        android:text="2020/05/28"
                        android:textColor="#252525" />

                    <TextView
                        android:id="@+id/sub_start_time"
                        style="@style/createEventItemTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="0dp"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:paddingStart="8dp"
                        android:paddingTop="6.5dp"
                        android:paddingEnd="8dp"
                        android:paddingBottom="6.5dp"
                        android:text="07:00"
                        android:textColor="#252525" />

                    <TextView
                        android:id="@+id/sub_end_time"
                        style="@style/createEventItemTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="0dp"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:paddingStart="8dp"
                        android:paddingTop="6.5dp"
                        android:paddingEnd="8dp"
                        android:paddingBottom="6.5dp"
                        android:text="07:00"
                        android:textColor="#252525" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingEnd="14dp">

                    <ImageView
                        style="@style/createEventIconStyle"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/icon_star" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"
                        android:gravity="right"
                        android:orientation="horizontal"
                        android:paddingStart="4dp"
                        android:paddingTop="6dp"
                        android:paddingEnd="4dp"
                        android:paddingBottom="5.5dp">

                        <RatingBar
                            android:id="@+id/sub_ratingBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:isIndicator="false"
                            android:numStars="5"
                            android:rating="0"
                            android:stepSize="1" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:paddingEnd="14dp">

                    <ImageView
                        android:id="@+id/alm_image"
                        style="@style/createEventIconStyle"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        app:srcCompat="@drawable/alm" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="40dp"
                        android:orientation="vertical">

                        <DatePicker
                            android:id="@+id/datePicker"
                            android:layout_width="wrap_content"
                            android:layout_height="110dp"
                            android:layout_marginLeft="5dp"
                            android:calendarViewShown="false"
                            android:datePickerMode="spinner" />

                        <TimePicker
                            android:id="@+id/timePicker"
                            android:layout_width="wrap_content"
                            android:layout_height="110dp"
                            android:timePickerMode="spinner"
                            app:layout_constraintBottom_toTopOf="@id/ex_ratingBar"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_chainStyle="packed" />
                    </LinearLayout>

                </LinearLayout>

                <View
                    style="@style/createEventSeparator"
                    android:layout_marginStart="57dp" />
                <LinearLayout
                    android:id="@+id/ll_header"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:orientation="horizontal"
                    android:background="?attr/colorPrimary"
                    android:theme="@style/AppTheme.AppBarOverlay">

                    <Button
                        android:id="@+id/btn_subject_save"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/save" />

                    <Button
                        android:id="@+id/btn_subject_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/cancel" />

                </LinearLayout>


                <!--<View style="@style/createEventSeparator" />-->

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>