<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="350dp"
    android:background="#eeeeee">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/titleTV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="  과목 카테고리 수정"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">
        <EditText
            android:id="@+id/up_category_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="과목을 입력해주세요"/>
        <EditText
            android:id="@+id/up_pro_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="교수님 성함을 입력해주세요"/>
        <EditText
            android:id="@+id/up_pro_email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="교수님 메일을 입력해주세요"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/up_day"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="요일"
                android:layout_weight="1.2" />
            <EditText
                android:id="@+id/up_class_start"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="분"
                android:layout_weight="1"
                android:inputType="number"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:visibility="invisible"
                android:id="@+id/up_id"
                android:enabled="false"
                android:background="@drawable/remove"/>
            <EditText
                android:id="@+id/up_class_ends"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="시"
                android:layout_weight="1"
                android:inputType="number"/>

        </LinearLayout>
        <EditText
            android:id="@+id/up_lectureroom"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="강의실을 입력해주세요"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/up_cate_Cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="up_cate_cancle"
            android:text="취소"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/up_cate_OK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="확인"
            android:onClick="up_cate_OK"
            android:layout_weight="1"/>

    </LinearLayout>


</LinearLayout>