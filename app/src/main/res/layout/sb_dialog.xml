<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="380dp"
    android:background="#eeeeee">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/titleTV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="  과목 카테고리 추가"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">
        <EditText
            android:id="@+id/et_category_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="과목을 입력해주세요"/>
        <EditText
            android:id="@+id/et_pro_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="교수님 성함을 입력해주세요"/>
        <EditText
            android:id="@+id/et_pro_email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="교수님 메일을 입력해주세요"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/et_day"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="요일"
                android:layout_weight="1" />
            <TextView
                android:id="@+id/et_class_start"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="시작 시간"
                android:layout_weight="1"
                android:inputType="number"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/remove"/>
            <TextView
                android:id="@+id/et_class_ends"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="종료 시간"
                android:layout_weight="1"
                android:inputType="number"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/et_day1"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="요일"
                android:layout_weight="1" />
            <TextView
                android:id="@+id/et_class_start1"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="시작 시간"
                android:layout_weight="1"
                android:inputType="number"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/remove"/>
            <TextView
                android:id="@+id/et_class_ends1"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="종료 시간"
                android:layout_weight="1"
                android:inputType="number"/>

        </LinearLayout>
        <EditText
            android:id="@+id/et_lectureroom"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="강의실을 입력해주세요"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/sb_Cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="sbCancle"
            android:text="취소"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/sb_OK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="sbOK"
            android:text="확인"
            android:layout_weight="1"/>

    </LinearLayout>


</LinearLayout>