<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    tools:context=".CreateHabit"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="0dp"
            android:theme="@style/AppTheme.AppBarOverlay">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                app:subtitleTextAppearance="@style/AppTheme.SubTitleText"
                app:titleTextAppearance="@style/AppTheme.TitleText"/>



        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:clipToPadding="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp" >

                    <ImageView
                        style="@style/createEventIconStyle"
                        android:src="@drawable/icon_title"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="5.5dp"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp">

                        <EditText
                            android:id="@+id/et_event_title"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:hint="@string/title"
                            android:textColor="#252525"
                            android:paddingStart="6dp"
                            android:paddingEnd="6dp"
                            style="@style/createEventItemTextView" />


                    </LinearLayout>

                </LinearLayout>


                <View style="@style/createEventSeparator"
                    android:layout_marginStart="57dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp" >

                    <ImageView
                        style="@style/createEventIconStyle"
                        android:src="@drawable/icon_clock"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="5.5dp"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp">


                        <Button
                            android:id="@+id/btn_mon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/habit_button"
                            android:text="월" />
                        <Button
                            android:id="@+id/btn_tue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="화"
                            android:background="@drawable/habit_button"/>
                        <Button
                            android:id="@+id/btn_wed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="수"
                            android:background="@drawable/habit_button"/>
                        <Button
                            android:id="@+id/btn_thu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="목"
                            android:background="@drawable/habit_button"/>
                        <Button
                            android:id="@+id/btn_fri"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="금"
                            android:background="@drawable/habit_button"/>
                        <Button
                            android:id="@+id/btn_sat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="토"
                            android:background="@drawable/habit_button"/>
                        <Button
                            android:id="@+id/btn_sun"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="일"
                            android:background="@drawable/habit_button"/>


                    </LinearLayout>




                </LinearLayout>
                <View style="@style/createEventSeparator"
                    android:layout_marginStart="57dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp" >

                    <ImageView
                        style="@style/createEventIconStyle"
                        android:src="@drawable/icon_title"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="5.5dp"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp">


                        <EditText
                            android:id="@+id/et_habitmemo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="10"
                            android:inputType="textPersonName"
                            android:hint="memo"/>
                    </LinearLayout>




                </LinearLayout>

                <View style="@style/createEventSeparator" />


                <LinearLayout
                    android:id="@+id/ll_header"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:orientation="horizontal"
                    android:background="?attr/colorPrimary"
                    android:theme="@style/AppTheme.AppBarOverlay">



                    <Button
                        android:id="@+id/btn_save"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="저장" />
                    <Button
                        android:id="@+id/btn_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="취소" />
                </LinearLayout>



            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>