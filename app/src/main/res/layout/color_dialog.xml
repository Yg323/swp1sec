<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="#eeeeee">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/titleTV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="색상 추가"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp">
        <ImageButton
            android:id="@+id/ibtn_red"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/circle_red_stroke"/>

        <ImageButton
            android:id="@+id/ibtn_orange"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/circle_orange_stroke"/>

        <ImageButton
            android:id="@+id/ibtn_yellow"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/circle_yellow_stroke"/>

        <ImageButton
            android:id="@+id/ibtn_green"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/circle_green_stroke"/>

        <ImageButton
            android:id="@+id/ibtn_blue"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/circle_blue_stroke"/>

        <ImageButton
            android:id="@+id/ibtn_purple"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/circle_puple_stroke"/>





    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/color_Cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="colorCancle"
            android:text="취소"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/color_OK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="확인" />
    </LinearLayout>


</LinearLayout>